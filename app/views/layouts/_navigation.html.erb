<header>
<div class="header">Dragon Arrow <span><i class="fa fa-pencil-square-o" aria-hidden="true"></i> written by Tatsuya Nakaji, all rights reserved<span><img id="red_dragon" src="https://www.animatedimages.org/data/media/188/animated-dragon-image-0164.gif" border="0" height="50" alt="animated-dragon-image-0164" /></div>
</header>
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href=<%= root_path %>>I love Froala-Blog</a>
    </div>
    
    <div class="collapse navbar-collapse" id="navbarEexample">
      <ul class="nav navbar-nav">
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
            <i class="fa fa-code" aria-hidden="true"> code</i>
          </a>
          <ul class="dropdown-menu" role="menu">
            <% Tag.select('tags.*', 'count(articles.id) AS acs').left_joins(:articles).group('tags.id').order('acs desc').each do |tag| %>
              <li role="presentation"><a href=<%= manage_tag_path(id: tag.id) %>><%= tag.name %></a></li>
            <% end %>
          </ul>
        </li>
        <li><a href="#"><i class="fa fa-heart" aria-hidden="true"> lib</i></a></li>
        <li><a href="#"><i class="fa fa-columns" aria-hidden="true"> works</i></a></li>
        <li><a href="#"><i class="fa fa-comments-o" aria-hidden="true"> other</i></a></i>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li><a href = <%= root_path %>><span class="fa fa-home"> home</span></a></li>
        <% if user_signed_in? %>
        <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
        <i class="fa fa-child" aria-hidden="true"></i> Tatsuya
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
        <%= link_to '新規投稿', new_article_path, :class => "dropdown-item" %>
        <div class="dropdown-divider"></div>
        <a class="dropdown-item" href="#">Signed in as: <%= current_user.email %></a>
        <div class="dropdown-divider"></div>
        <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, :class => "dropdown-item" %>
        </div>
        </li>
        <% else %>
        <!-- <li><a href="#"><i class="fa fa-child" aria-hidden="true"></i> ナポジン</a></li> -->
        <li><a><img id="my_image" src="https://www.animatedimages.org/data/media/187/animated-dinosaur-image-0001.gif" height="30" border="0" alt="animated-dinosaur-image-0001" /> Tatsuya</a></li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>

<script>
  $('#red_dragon').on({
    'click': function(){
        alert("</>code をクリックしてタグ検索!");
    }
  });
  $('#my_image').on({
    'click': function(){
        $('#my_image').attr('src','https://www.animatedimages.org/data/media/187/animated-dinosaur-image-0012.gif');
        alert("食べないでー！");
    }
  });
</script>